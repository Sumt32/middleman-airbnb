<div class="container" id="home-flats">
  <h2 class="text-center">Recent flats</h2>
  <div class="row">
    <% data.flats.each do |owner, flat| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%), url('../images/<%= flat.city_slug %>.png');">
        <div class=" card-category">
          <%= flat.city_name %>
        </div>
        <div class="card-description">
          <h3><%= flat.name %></h3>
          <p>
            <%= flat.description %>
          </p>
        </div>
        <%= image_tag "#{owner}.png", class:"card-user" %>
        <%= link_to "", "flats/#{owner}.html", class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>